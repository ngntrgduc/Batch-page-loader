{
    "name": "Batch page loader",
    "version": "0.1",
    "description": "Open multiple links in a flash",
    "manifest_version": 3,
    "action": {
        "default_title": "Batch page loader",
        "default_icon": "icons/loading.png"
    },
    "icons": {
        "16": "icons/loading.png",
        "48": "icons/loading.png",
       "128": "icons/loading.png" 
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+L"
            }
        }
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
