{
    "name": "Multiple links loader",
    "version": "0.3.1",
    "description": "Open multiple links in a flash",
    "manifest_version": 3,
    "action": {
        "default_title": "Multiple links loader",
        "default_icon": "icons/loading.png"
    },
    "icons": {
        "16": "icons/loading16.png",
        "32": "icons/loading32.png",
       "128": "icons/loading128.png" 
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+L"
            }
        },
        "open-options": {
            "suggested_key": {
                "default": "Alt+Shift+L"
            },
            "description": "Open the options page"
        }
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
	    "browser_specific_settings": {
        "gecko": {
          "id": "ngntrgduc@MultipleLinksLoader"
        }
    }
}
